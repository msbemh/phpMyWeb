<script type="text/javascript">
let user_id = "";
let user_nick_name = "";

//세션정보 가져오기(동기)
$.ajax({
    url:'/userSession',
    dataType:'json',
    type:'POST',
    async:false,
    success:function(data){
        console.log("[세션]data:",data);
        user_id = data.userId;
        user_nick_name = data.nickName;
    }
});

let socket;
$(function() {
    // socket.io 서버에 접속한다
    socket = io();
    // 서버로 자신의 정보를 전송한다.
    // socket.emit("login", {
    //
    // });

    //서버로부터의 방접속 됐다고 신호가 온다면, 채팅리스트를 리로드 시켜ㅑ주자
    socket.on("room_join", function(data) {
        console.log("[채팅리로드시키자!]");
        chat_list_reload_full();
    });

    // 서버로부터의 메시지가 수신되면
    socket.on("chat", function(data) {
        console.log("[메인 리스트]chat동작 data:",data);
        chat_list_reload_full();
        // $("#chatLogs").append("<div>" + data.msg + " : from <strong>" + data.from.name + "</strong></div>");
    });

    //채팅 리스트 완전 리로드
    chat_list_reload_full();

    //유저 리스트 가져오기
    $.ajax({
        url:'/userList',
        dataType:'json',
        type:'POST',
        data:{'user_id':user_id},
        success:function(data){
            console.log("data:",data);
            //유저 리스트 리로드
            user_list_reload(data);
            //유저리스트 클릭 이벤트
            $("#major_menu .data_piece").on("click", function() {
                let user_email = $(this).data("email");
                console.log("user_email:",user_email);
                go_room(user_email);
            });
        }
    });

    //유저리스트 보여주기
    $("#chat_menu .user_group").on("click",function(){
        $('#chat_menu').css('display', 'none');
        $('#major_menu').css('display', 'block');
    });

    //채팅리스트 보여주기
    $("#major_menu .chat").on("click",function(){
        $('#chat_menu').css('display', 'block');
        $('#major_menu').css('display', 'none');
    });


});

function user_list_reload(data){
    let $user_list_ul = $("#major_menu ul");
    //초기화
    $user_list_ul.html("");

    for(let i=0; i<data.length;i++){
        let item = data[i];

        let html = "<li>\n" +
            "                <div class=\"data_piece\" data-nick-name="+item.nickName+" data-email="+item.userId+">\n" +
            "                    <div class =\"img_box fl\">\n" +
            "                        <img src=\"\" onerror=\"this.src='/res/user.png'\"></img>\n" +
            "                    </div>\n" +
            "                    <div class =\"info_box fl\">\n" +
            "                        <div class=\"user_nick_name\">"+item.nickName+"</div>\n" +
            "                        <div class=\"user_email\">"+item.userId+"</div>\n" +
            "                    </div>\n" +
            "                </div>\n" +
            "            </li>";
        $user_list_ul.append(html);
    }
}

function chat_list_reload(data) {
    let $chat_list_ul = $("#chat_menu ul");
    //초기화
    $chat_list_ul.html("");

    for(let i=0; i<data.length;i++) {
        let item = data[i];

        let html =
            "               <li>\n" +
            "                <div class=\"data_piece\" data-nick-name=" + item.nickName + " data-email=" + item.counter_user_id + " data-room_no= "+ item.room_no +" data-counter_user_id= "+ item.counter_user_id +" data-counter_nick_name= "+ item.counter_nick_name +">\n" +
            "                    <div class =\"img_box fl\">\n" +
            "                        <img src=\"\" onerror=\"this.src='/res/user.png'\"></img>\n" +
            "                    </div>\n" +
            "                    <div class =\"info_box fl\" style=\"width:75%;\">\n" +
            "                        <div class=\"user_nick_name fl\">"+item.counter_nick_name+"</div>\n" +
            "                        <div class=\"creation_date fr\">"+item.creationDate+"</div>\n" +
            "                        <div style=\"clear:both;\"></div>\n" +
            "                        <div class=\"content\">"+item.content+"</div>\n";
        //안 읽은 개수가 존재할때만 표시해주기
        if(item.read_num > 0){
            html += "                <div class=\"read_num\">"+item.read_num+"</div>";
        }
        html +=    "             </div>\n" +
            "                </div>\n" +
            "            </li>";
        $chat_list_ul.append(html);
    }
}

//채팅 리스트 완전 리로드
function chat_list_reload_full(){
    //채팅 리스트 정보 가져오기
    $.ajax({
        url:'/chatList',
        dataType:'json',
        type:'POST',
        data:{'user_id':user_id},
        success:function(data){
            console.log("data:",data);
            chat_list_reload(data);

            //이벤트 초기화
            $("#chat_menu .data_piece").off("click");

            $("#chat_menu .data_piece").on("click", function() {
                let room_no = $(this).data("room_no");
                let user_email = $(this).data("email");
                console.log("user_email:",user_email);
                go_room_with_room_no(room_no, user_email);
            });
        }
    });
}

//유저 이메일로 방에 들어가기
function go_room(user_email) {
    //모든 부모 윈도우에게 메시지 전송
    window.parent.postMessage({ 'counter_user_email': user_email, 'is_room_no': false }, '*');
}

//방번호로 방에 들어가기
function go_room_with_room_no(room_no, user_email) {
    //모든 부모 윈도우에게 메시지 전송
    window.parent.postMessage({ 'room_no': room_no, 'counter_user_email': user_email, 'is_room_no': true }, '*');
}


